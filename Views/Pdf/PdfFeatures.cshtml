@{
    ViewBag.Title = "Pdf";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Pdf Features:</h2>
<br/>
<li> Default</li>
<br/>
<div id="ControlRegion">
    @{Html.BeginForm("GeneratePDF", "Pdf", FormMethod.Post);
        {
            <div class="Common">
                <div class="tablediv">
                    <label class="rowdiv">
                        Click the button to view an PDF document generated by Essential PDF. Please note
                        that Adobe Reader or its equivalent is required to view the resultant document.
                    </label>
                </div>
                <div class="tablediv">
                    <div class="rowdiv">
                        <div class="celldiv">
                            <div style="padding: 5px 7px 5px 7px;">
                                <table width="30%">
                                    <tr>
                                        <td align="left" width="100%">
                                            <input id="InsideBrowser" type="checkbox" name="Browser" value="Browser" />
                                            <label for="Opentype">
                                                Open Document inside Browser
                                            </label>
                                        </td>
                                        <td align="right">
                                            <input type="submit" class="Button" value="Create PDF" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            Html.EndForm();
        }
    }
    </div>
